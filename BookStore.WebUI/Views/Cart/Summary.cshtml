@model BookStore.Domain.Entities.Cart

<!-- Link to the checkout page for larger windows. -->
<div class="navbar-right hidden-xs">
    @Html.ActionLink("Checkout", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default navbar-btn" })
</div>

<!-- Same link for smaller windows -->
<!-- Except it doesn't work for some reason. -->
<div class="navbar-right visible-xs">
    <a href=@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery })
       class="btn btn-default navbar-btn">
        <span class="glyphicon glyphicon-shopping-cart"></span>
    </a>
</div>

<!-- Show the number of items in the cart and their price.-->
<div class="navbar-text navbar-right">
    <b class="hidden-xs">Your Cart:</b>
    @Model.Lines.Sum(x => x.Quantity) item(s), 
    @Model.ComputeTotal().ToString("c")
</div>