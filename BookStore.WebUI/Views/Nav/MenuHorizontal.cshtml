@model BookStore.WebUI.Models.NavigationViewModel

<div class="btn-group btn-group-sm btn-group-justified">
    @Html.ActionLink("Home", "List", "Product", new { @class = "btn btn-default btn-sm" })

    @foreach (string link in Model.Categories)
    {
       @Html.RouteLink(link,
           new
           {
               controller = "Product",
               action = "List",
               category = link,
               page = 1
           },
           new
           {
               @class = "btn btn-default btn-sm" + (link == Model.CurrentCategory ? " btn-primary" : "")
           }
       )
    }
</div>